<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtBrockerSmsLogDetailedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtBrockerSmsLogDetailedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnBrockerSmsLogDetailedDelete"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtBrockerSmsLogDetailedContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtBrockerSmsLogDetailedName"
        android:layout_toLeftOf="@+id/btnBrockerSmsLogDetailedDelete"
        android:text="TextView" />

    <Button
        android:id="@+id/btnBrockerSmsLogDetailedDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/delete" />

</RelativeLayout>
