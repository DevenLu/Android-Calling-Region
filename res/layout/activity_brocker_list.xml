<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BrockerListActivity" >

    <TextView
        android:id="@+id/txtBrockerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:text="@string/blacklist"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <GridView
        android:id="@+id/gvBrockerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:numColumns="3"
        android:visibility="visible" >

    </GridView>

    <Button
        android:id="@+id/btnContact"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onFromContact"
        android:text="@string/from_contact" />

    <Button
        android:id="@+id/btnFromCallRecords"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gvBrockerList"
        android:layout_toRightOf="@+id/btnContact"
        android:onClick="onFromCallRecords"
        android:text="@string/from_call_records" />

</RelativeLayout>