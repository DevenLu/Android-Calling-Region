<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.huxos.checkout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <!-- 使用网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 挂断手机的权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 读取电话状态的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 在其他程序之上显示窗口的权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 过去呼出电话的权限 -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <!-- 读取联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />

    <!-- 注册Activity BroadCastreceiver -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- BoradcastReceiver -->
        <receiver android:name="me.huxos.checkout.PhoneStatReceiver" >
            <intent-filter>

                <!-- 获取来电广播 -->
                <action android:name="android.intent.action.PHONE_STATE" />
                <!-- 获取去电广播 -->
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
        <receiver android:name="me.huxos.checkout.SMSSTateReceiver" >
            <intent-filter android:priority="2147483647" >

                <!-- 获取接收短信的广播 -->
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <!-- 获取发送短信的广播 -->
                <!-- action android:name="android.provider.Telephony.SMS_SENT" / -->
            </intent-filter>
        </receiver>

        <activity
            android:name="me.huxos.checkout.FirewallSettingActivity"
            android:label="@string/title_activity_firewall_setting" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.huxos.checkout.QueryAreaActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="me.huxos.checkout.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="me.huxos.checkout.BrockerListActivity"
            android:label="@string/title_activity_brocker_list" >
        </activity>
        <activity
            android:name="me.huxos.checkout.BrockerPhoneLogActivity"
            android:label="@string/title_activity_brocker_phone_log" >
        </activity>
    </application>

</manifest>